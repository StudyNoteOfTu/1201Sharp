<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#7ec6fb"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#7ec6fb"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <Button
            android:transitionName="topback"
            android:id="@+id/back"
            android:layout_marginLeft="10dp"
            android:background="@drawable/update_detail_down"
            android:layout_width="45dp"
            android:layout_height="45dp"
            tools:ignore="UnusedAttribute"
            android:layout_marginStart="10dp" />
        <TextView
            android:textColor="#383838"
            android:typeface="monospace"
            android:textSize="20sp"
            android:gravity="center"
            android:text="@string/note_now"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp" />
        <View
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp" />
    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#71aedc"/>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@drawable/editback"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">


                <TextView
                    android:textColor="#413978"
                    android:text="@string/note_title"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:background="@null"
                    android:transitionName="note_title"
                    android:lines="1"
                    android:id="@+id/edt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UnusedAttribute" />

                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#c6c6c6"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:textColor="#413978"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_note" />
                <EditText
                    android:gravity="top"
                    android:background="@null"
                    android:layout_marginTop="10dp"
                    android:id="@+id/edt_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="10"
                    android:maxLines="18" />

                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#c6c6c6"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_marginTop="3dp"
            android:transitionName="shareNames"
            android:textColor="#363636"
            android:background="@drawable/confirm_2"
            android:id="@+id/btn_confirm"
            android:layout_gravity="center_horizontal"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:textAllCaps="false"
            tools:ignore="UnusedAttribute" />

    </LinearLayout>


</LinearLayout>