<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#efefef"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="#7ec6fb"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back"
            android:layout_marginLeft="10dp"
            android:background="@drawable/update_detail_down"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <TextView
            android:textColor="#383838"
            android:typeface="monospace"
            android:textSize="20sp"
            android:gravity="center"
            android:text="发布任务"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp" />

        <View
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#7ab3df"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#81b8e2"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#98c3e4"/>


    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/circleback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <TextView
        android:layout_marginLeft="5dp"
        android:textColor="#413978"
        android:text="任务名称："
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


            <com.ms.square.android.expandabletextview.ExpandableTextView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="8dp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                expandableTextView:maxCollapsedLines="3"
                expandableTextView:animDuration="200">
                <TextView
                    android:id="@id/expandable_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="18sp"
                    android:textColor="#666666" />
                <ImageButton
                    android:id="@id/expand_collapse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_gravity="right|bottom"
                    android:background="@android:color/transparent"/>
            </com.ms.square.android.expandabletextview.ExpandableTextView>
        </LinearLayout>


        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c6c6c6"/>


    <TextView
        android:layout_marginLeft="15dp"
        android:text="任务事项："
        android:textColor="#413978"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginLeft="15dp"
        android:textSize="12sp"
        android:textColor="#000"
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <com.ms.square.android.expandabletextview.ExpandableTextView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="8dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tv_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            expandableTextView:maxCollapsedLines="3"
            expandableTextView:animDuration="200">
            <TextView
                android:id="@id/expandable_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:textColor="#666666" />
            <ImageButton
                android:id="@id/expand_collapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_gravity="right|bottom"
                android:background="@android:color/transparent"/>
        </com.ms.square.android.expandabletextview.ExpandableTextView>


        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c6c6c6"/>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:text="分享码："
            android:textColor="#413978"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView
        android:textSize="16sp"
        android:text="10101010101"
        android:textColor="#000"
        android:id="@+id/tv_objId"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="wrap_content" />

        <TextView
            android:textSize="16sp"
            android:text="成员编号："
            android:textColor="#413978"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edt_key_task"
        android:inputType="number"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:lines="1"/>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

    <Button
        android:layout_marginTop="3dp"
        android:background="@drawable/button_style"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tolast"
        android:text="上一个"
        android:layout_marginRight="10dp"
        android:textColor="#363636"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>


    <Button
        android:layout_marginTop="3dp"
        android:background="@drawable/button_style"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_getInfo"
        android:text="获取成员信息"
        android:textColor="#363636"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>

<Button
    android:layout_marginLeft="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/button_style"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tonext"
        android:text="下一个"
        android:textColor="#363636"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>

    </LinearLayout>



    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/circleback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_marginLeft="5dp"
        android:textColor="#413978"
        android:text="成员名字："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:background="@null"
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"/>

        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c6c6c6"/>

    <TextView
        android:layout_marginLeft="5dp"
        android:textColor="#413978"
        android:text="成员进度："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:background="@null"
        android:gravity="top"
        android:id="@+id/edt_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="5"
        android:maxLines="10"/>

        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c6c6c6"/>
    </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_marginTop="3dp"
        android:background="@drawable/button_style"
        android:id="@+id/btn_update"
        android:text="更新成员信息"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>