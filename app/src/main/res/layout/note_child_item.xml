<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <View
        android:id="@+id/circle_left"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/circle_left1"/>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/note_child_back"
        android:orientation="horizontal">
    <TextView
        android:transitionName="note_title"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:id="@+id/child_title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:textColor="#383838"
        android:text="这是t"/>

    <Button
        android:layout_marginRight="20dp"
        android:focusable="false"
        android:clickable="true"
        android:id="@+id/delete_note"
        android:background="@drawable/home_gou"
        android:layout_gravity="center"
        android:layout_marginTop="1.5dp"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    </LinearLayout>
</LinearLayout>